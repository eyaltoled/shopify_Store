<!doctype html>
<html lang="he" dir="rtl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;600;700;800&family=Assistant:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    {%- render 'meta-tags' -%}
    
    <!-- RTL Beauty Store Custom Styles -->
    <style>
      :root {
        --primary-gold: #d4a574;
        --primary-gold-dark: #b8915f;
        --secondary-cream: #f8f3ed;
        --accent-purple: #c9a0dc;
        --accent-rose: #ffd4c3;
        --dark: #2a2a2a;
        --text: #333333;
        --light: #ffffff;
        --shadow: rgba(0, 0, 0, 0.08);
        --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        
        /* Typography */
        --font-heading: 'Heebo', sans-serif;
        --font-body: 'Assistant', 'Heebo', sans-serif;
      }

      * {
        box-sizing: border-box;
      }

      html {
        direction: rtl;
        text-align: right;
      }

      body {
        font-family: var(--font-body);
        color: var(--text);
        line-height: 1.6;
        margin: 0;
        padding: 0;
        direction: rtl;
        background: var(--light);
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        font-weight: 700;
        line-height: 1.2;
        color: var(--dark);
      }

      h1 { font-size: clamp(32px, 5vw, 62px); }
      h2 { font-size: clamp(28px, 4vw, 42px); }
      h3 { font-size: clamp(22px, 3vw, 32px); }

      /* Buttons - RTL Optimized */
      .btn,
      button[type="submit"],
      .button,
      .shopify-payment-button__button {
        padding: 16px 40px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        text-decoration: none;
        display: inline-block;
        font-family: var(--font-body);
        text-align: center;
      }

      .btn-primary,
      button[type="submit"]:not(.btn-secondary),
      .button--primary,
      .shopify-payment-button__button--unbranded {
        background: var(--primary-gold);
        color: var(--light);
        box-shadow: 0 10px 30px rgba(212, 165, 116, 0.3);
        border: none;
      }

      .btn-primary:hover,
      button[type="submit"]:not(.btn-secondary):hover,
      .button--primary:hover {
        background: var(--primary-gold-dark);
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(212, 165, 116, 0.4);
      }

      .btn-secondary,
      .button--secondary {
        background: var(--light);
        color: var(--text);
        border: 2px solid var(--primary-gold);
      }

      .btn-secondary:hover,
      .button--secondary:hover {
        background: var(--primary-gold);
        color: var(--light);
        transform: translateY(-2px);
      }

      /* Cards - Beauty Style */
      .card,
      .product-card,
      .collection-card {
        background: var(--light);
        border-radius: 15px;
        overflow: hidden;
        transition: var(--transition);
        box-shadow: 0 5px 20px var(--shadow);
      }

      .card:hover,
      .product-card:hover,
      .collection-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
      }

      /* Product Grid - RTL */
      .product-grid,
      .collection-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        direction: rtl;
      }

      @media (max-width: 768px) {
        .product-grid,
        .collection-grid {
          grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
          gap: 20px;
        }
      }

      /* Images */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      .product-card__media img,
      .card__media img {
        transition: var(--transition);
      }

      .product-card:hover .product-card__media img,
      .card:hover .card__media img {
        transform: scale(1.08);
      }

      /* Price Styling */
      .price,
      .product-price {
        font-weight: 700;
        color: var(--primary-gold);
        font-size: 1.5rem;
      }

      .price--on-sale .price__regular,
      .product-price--on-sale .price__regular {
        color: #999;
        text-decoration: line-through;
        font-size: 1.2rem;
        margin-right: 10px;
      }

      /* Forms - RTL Optimized */
      input[type="text"],
      input[type="email"],
      input[type="tel"],
      input[type="search"],
      input[type="number"],
      textarea,
      select {
        width: 100%;
        padding: 14px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-family: var(--font-body);
        font-size: 16px;
        transition: var(--transition);
        direction: rtl;
        text-align: right;
      }

      input:focus,
      textarea:focus,
      select:focus {
        outline: none;
        border-color: var(--primary-gold);
        box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.1);
      }

      /* Header Enhancements */
      .header {
        background: var(--light);
        box-shadow: 0 2px 20px var(--shadow);
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .header__heading-link {
        font-family: var(--font-heading);
        font-size: 28px;
        font-weight: 700;
        color: var(--primary-gold);
        text-decoration: none;
      }

      /* Navigation */
      .header__menu-item a {
        font-weight: 500;
        color: var(--text);
        transition: var(--transition);
        position: relative;
        text-decoration: none;
        padding: 8px 0;
      }

      .header__menu-item a::after {
        content: '';
        position: absolute;
        bottom: 0;
        right: 0;
        width: 0;
        height: 2px;
        background: var(--primary-gold);
        transition: var(--transition);
      }

      .header__menu-item a:hover::after {
        width: 100%;
      }

      /* Footer */
      .footer {
        background: var(--dark);
        color: var(--light);
        padding: 80px 20px 30px;
      }

      .footer h2,
      .footer h3,
      .footer h4 {
        color: var(--primary-gold);
      }

      .footer a {
        color: var(--light);
        opacity: 0.8;
        transition: var(--transition);
      }

      .footer a:hover {
        opacity: 1;
        color: var(--primary-gold);
      }

      /* Badges */
      .badge,
      .product-badge {
        background: var(--accent-purple);
        color: var(--light);
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
      }

      .badge--sale {
        background: #e74c3c;
      }

      .badge--new {
        background: var(--accent-purple);
      }

      /* Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
      }

      /* Sections Spacing */
      .section {
        padding: 80px 20px;
      }

      @media (max-width: 768px) {
        .section {
          padding: 50px 20px;
        }
      }

      /* Container */
      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* RTL Specific Fixes */
      [dir="rtl"] .icon-with-text svg {
        margin-left: 8px;
        margin-right: 0;
      }

      [dir="rtl"] .list-unstyled {
        padding-right: 0;
        padding-left: 0;
      }

      /* Quick Add Button */
      .quick-add-button {
        background: var(--light);
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        font-family: var(--font-body);
      }

      .quick-add-button:hover {
        background: var(--primary-gold);
        color: var(--light);
      }

      /* Star Ratings */
      .rating {
        color: #ffc107;
        direction: ltr;
        display: inline-block;
      }

      /* Loading States */
      .loading {
        opacity: 0.6;
        pointer-events: none;
      }

      /* Mobile Menu */
      @media (max-width: 990px) {
        .header__menu {
          text-align: right;
        }
      }

      /* Scroll Animations */
      .scroll-trigger {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .scroll-trigger.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Add to Cart Success */
      .cart-notification {
        background: var(--primary-gold);
        color: var(--light);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      }
    </style>

    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="rtl-beauty-theme">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <main id="MainContent" class="content-for-layout" role="main">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    <!-- Scroll Animation Script -->
    <script>
      // Scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, observerOptions);

      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.scroll-trigger').forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
